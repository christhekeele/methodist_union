<p id="notice"><%= notice %></p>

<h1>DEATH HUB</h1>

<table class="deaths-table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Address</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deaths.each do |death| %>
      <tr>
        <td>
          <% if death.date %>
            <%= death.date.strftime("%B %e, %Y") %>
          <% end %>
        </td>
        <td><%= death.address %></td>
        <td><%= link_to 'Show', death %></td>
        <td><%= link_to 'Edit', edit_death_path(death) %></td>
        <td><%= link_to 'Destroy', death, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

